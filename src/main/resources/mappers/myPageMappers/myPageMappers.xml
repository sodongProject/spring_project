<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.myPage.mapper.myPageMapper">
    <select id="findOne" resultType="users">
        SELECT * FROM users
        WHERE account = #{account}
    </select>

    <select id="confirmPassword" resultType="string">
        SELECT password FROM users
        WHERE account = #{account}
    </select>

    <select id="editUserPhoneNumber">
        UPDATE users
        SET phoneNumber = #{ph}
        WHERE account = #{account}
    </select>

    <select id="editUserAdress">
        UPDATE users
        SET address = #{ad}
        WHERE account = #{account}
    </select>

    <select id="editUserPassword">
        UPDATE users
        SET password = #{pw}
        WHERE account = #{account}
    </select>
</mapper>