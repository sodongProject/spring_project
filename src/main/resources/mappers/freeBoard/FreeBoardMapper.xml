<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.freeBoard.mapper.FreeBoardMapper">


    <!-- 등록 -->
    <insert id="save">
    INSERT INTO clubs_community_boards
    (club_no, club_community_content, account, club_community_image)
    VALUES
    (#{clubNo}, #{content}, #{account}, #{boardImg} )
    </insert>

    <!-- 목록 조회 -->
    <select id="findAll" resultType="com.project.entity.FreeBoard">
        SELECT * FROM clubs_community_boards
    </select>

    <!-- 상세 조회 -->
<!--    <select id="findOne" parameterType="int" resultType="com.project.entity.FreeBoard">-->
<!--        SELECT * FROM clubs_community_boards-->
<!--        WHERE club_community_no = #{boardNo}-->
<!--    </select>-->


    <!-- 삭제 -->
    <delete id="delete">
        DELETE FROM clubs_community_boards
        WHERE club_community_no = #{freeBoardNo}
    </delete>

    <!--  조회수  -->
    <update id="updateViewCount">
        UPDATE clubs_community_boards
        SET club_community_view_count = club_community_view_count + 1
        WHERE club_community_no = #{boardNo}
    </update>


</mapper>
